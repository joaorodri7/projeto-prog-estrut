#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

int main()
{
    int i;
    double altura[1000];
    
    
    do {
        printf("Digite a altura: ");
        scanf("%lf", &altura);

        if(altura>1 && altura<2)
        {
            printf("valor valido");
        }
        else{
            printf("valor invalido");
        }


        
        
        printf("Digite 1 para continuar ou 2 para sair\n");
        scanf("%d", &i);
        
        getchar();
        
    } 
    
    while (i == 1);
    
    
    
   

    return 0;
}



// PARTE DO IF 
double altura;
    
    
        printf("Digite a altura: ");
        scanf("%lf", &altura);

        if (altura >= 1 && altura <= 2)
        {
            printf("altura = %.2lfm \n", altura);
        }
        else if (altura < 1 || altura > 2) {
            printf("valor invalido\n");
        }
      
