#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

int main()
{
    int i;
    char email[50][1000];
    
    
    do {
        printf("Digite o email do usuario: ");
        scanf("%s", &email);

        if(strchr(email,"@")==0)
        {
            printf("valor valido");
        }
        else{
            printf("valor invalido");
        }


        
        
        printf("Digite 1 para continuar ou 2 para sair\n");
        scanf("%d", &i);
        
        getchar();
        
    } 
    
    while (i == 1);
    
    
    
   

    return 0;
}


// PARTE DO EMAIL

char email[50];
    char validar = '@';
    
    
        printf("Digite o email do usuario: ");
        scanf("%s", &email);

        if(strchr(email, validar))
        {
            printf("valor valido");
        }
        else{
            printf("valor invalido");

		}

    return 0;
}
