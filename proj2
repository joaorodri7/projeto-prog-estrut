#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

struct endereco{
    int rua;
    long int cep;
    char cidade[20], estado[2];
}

end[1000];

struct backupendereco{
    int backuprua;
    long int backupcep;
    char backupcidade[20], backupestado[2];
}

backupend[1000];

int main()
{
	
