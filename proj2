			printf("\nUsuario %i:  %s\nsexo:%s\naltura:%.2lf\nemail:%s\nid do usuario: %d\nCEP:%lld\nCidade:%sEstado:%s\nrua:%d\n",i+0,nome[i],sexo[i],altura[i],email[i],idusuario[i],end[i].cep, end[i].cidade, end[i].estado, end[i].rua);
		}
